<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pc.rutacbc.Login">
    <TextView
        android:id="@+id/txv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txv_login"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/txv_login"/>

    <ImageView
        android:id="@+id/img_usuario"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="80dp"
        app:srcCompat="@mipmap/usuario" />
<EditText
    android:id="@+id/edt_usuario"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="80dp"
    android:layout_centerHorizontal="true"
    android:hint="@string/edt_usuario" />
    <EditText
        android:id="@+id/edt_contraseña"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:hint="@string/edt_contraseña"/>
    <Button
        android:id="@+id/btn_registro"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_registro"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"/>
</RelativeLayout>
